@section scripts {
    <script>
        $(document).ready(function() {
            $.ajax({
                url: "https://app.ticketmaster.com/discovery/v2/events.json?apikey=KTmwKGyLJSOws2LFF9Al78erEjIRRF1u&keyword=music&city=Rotterdam",
                success: function (result) {
                    var events = result['_embedded']['events'];
                    for (var i = 0; i < 20; i++) {
                        console.log(events[i]['images'][0]['url'])
                        $('#carousel-image-' + i).attr('src', events[i]['images'][0]['url'])
                        $('#carousel-image-' + i).parent().attr('href', '/home/getevent/' + events[i]['id'])
                        $('#carousel-title-' + i).html(events[i]['name'])
                    }
                    //Event name
                    $('#eventTitle').html(result['_embedded']['events'][0]['name']) 
                    //Event image
                    $('#eventImage').attr('src', result['_embedded']['events'][0]['images'][0]['url'])
                }
            })
        });
    </script>
}